<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <div class="rating"></div>
    </p>
    <p> 
      <%= f.text_area :body, class: "form-control", rows: "3" %>
    </p> 
    <p>
      <%= f.submit "Submit", class: "btn btn-outline-primary" %>
    </p>
  <% end %>
<% end %>