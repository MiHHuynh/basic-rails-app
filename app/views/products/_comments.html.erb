<div class="product-reviews">
    <% @comments.each do |comment| %>
        <div class="row">
            <hr>
            <p><%= comment.user.first_name %> said <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
            <p><div class="rated" data-score="<%= comment.rating %>"></div></p>
            <p><%= comment.body %></p>
            <p><small><em>Was this helpful?</em> Yes | No</small></p>
        </div>
    <% end %>
</div>