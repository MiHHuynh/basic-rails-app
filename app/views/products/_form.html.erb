    </fieldset>
    <fieldset class="form-group field">
      <%= f.label :image_url, "Image URL:" %><br>
      <%= f.text_field(:image_url, class:"form-control") %>
    </fieldset>
    <fieldset class="form-group field">
      <%= f.label :colour, "Colour:" %><br>
      <%= f.text_field(:colour, class:"form-control") %>
    </fieldset>
    <fieldset class="form-group field">
      <%= f.label :price, "Price:" %><br>
      <%= f.text_field(:price, class:"form-control") %>
    </fieldset>
    <div class="actions">
      <%= f.submit(class: "btn btn-primary")%>
    </div>
  </form>
